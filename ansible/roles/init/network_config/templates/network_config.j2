network:
  version: 2
  renderer: networkd
  ethernets:
    ens18: # network adapter
      dhcp4: no
      addresses: [{{ static_ip }}/24]
      routes:
        - to: default
          via: {{ gateway }}
      nameservers:
        addresses: [{{ dns_server_1 }},{{ dns_server_2 }}] # dns resolution
  